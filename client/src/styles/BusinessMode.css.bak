  /* Business Mode Header */
.business-header-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  background-color: #6200ea;
  padding: 10px 30px;
}

/* Business Mode Navigation */
.business-header-container nav {
  display: flex;
  gap: 10px;
}

.business-header-container button {
  padding: 10px 15px;
  background-color: white;
  color: #6200ea;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.business-header-container button:hover {
  background-color: #ddd;
}